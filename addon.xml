<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.netradio" name="NetRadio Client" version="9.0.2" provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="3.0.0" />
    <import addon="script.module.chardet" version="3.0.4"/>
    <import addon="script.module.mutagen" version="1.44.0"/>
    <import addon="script.module.six" version="1.16.0"/>
    <import addon="script.module.xmltodict" version="0.12.0"/>
    <import addon="script.module.qrcode" version="6.1.0"/>
    <import addon="script.module.websocket" version="1.6.4"/>
    <import addon="script.module.future" version="1.0.0"/>
    <import addon="script.module.beautifulsoup4" version="4.12.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en_GB">NetRadio Client</summary>
    <summary lang="ja_JP">NetRadio Client</summary>
    <description lang="en_GB">Listen to NHK Radio, Commercial Radio (radiko.jp) and others</description>
    <description lang="ja_JP">NHKラジオ, 民放ラジオ(radiko.jp)ほかを聴くことができます</description>
    <disclaimer lang="en_GB">Works on Windows &amp; macOS</disclaimer>
    <disclaimer lang="ja_JP">WindowsとmacOSで動作。</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
